{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "@app/*": ["src/app/*"],
      "@components/*": ["src/app/components/*"],
      "@pages/*": ["src/app/pages/*/index.jsx"],
      "@image/*": ["src/app/static/image/*"],
      "@styles/*": ["src/app/static/styles/*"],
      "@entities/*": ["src/app/entities/*"],
      "@utils/*": ["src/utils/*"],
      "@stories/*": ["src/stories/*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"]
  },
  "declaration": true,
  "compileOnSave": true,
  "exclude": ["node_modules", "*.test.ts"]
}
